function [motion] = updateFlight(motion, xlimits, ylimits)
    
    % Move UAV along its velocity vector.
        motion = read(plat);
        motion(1:2) = motion(1:2) + motion(4:5)/scene.UpdateRate;
        if any(motion(1) < ylimitsScene(0)) || any(motion(1:2) < -5)
            motion(4:5) = rand(1, 2) * 2 - 1; % Random new direction
        end
        move(plat, motion);

end
